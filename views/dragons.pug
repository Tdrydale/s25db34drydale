extends layout

block content
  h1= title
  -
    var results = [
      { name: "William", color: "Blue", age: 42 },
      { name: "Golbin", color: "Green", age: 16 },
      { name: "Charles", color: "Orange", age: 3 }
    ]

  div.container-fluid
    div.row
      each item in results
        div.col-sm-2
          h4 #{item.name}
          p Color: #{item.color}
          p Age: #{item.age}