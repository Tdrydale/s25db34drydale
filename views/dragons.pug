extends layout

block content
  h1= title
  -let items = results

  div(class="container-fluid")
    div(class="row m-1")
      each item in items
        div(class="row-sm-2", class="m-1") Dragon #{item.name} (#{item.color}) is #{item.age} #[br]
          button.btn(class="btn-primary ml-1", onclick=`dispatch("/dragons/update?id=${item._id}")`) Update


  script.
    function dispatch(path){
      window.location.href=path
    }